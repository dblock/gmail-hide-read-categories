{
  "manifest_version": 3,
  "name": "Hide Read Categories in GMail",
  "version": "0.3.0",
  "author": "Daniel Doubrovkine <dblock@dblock.org>",
  "description": "A GMail extension that hides read categories.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png",
    "512": "icons/icon_512.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["extension.js", "gmailJsLoader.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": ["https://mail.google.com/*", "https://*.google.com/*"],
  "permissions": ["activeTab", "scripting"]
}
